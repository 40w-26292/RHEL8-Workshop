#/bin/bash

echo "# Capture hostname"
uname -a

echo "" ; sleep 1

echo "# Capture who is logged in"
who

echo "" ; sleep 1
sleep 1
echo ""

echo "# Get the root passwd entry"
grep root /etc/passwd

echo "" ; sleep 1
echo ""

echo "# Get the root shadow entry"
grep root /etc/shadow

echo "" ; sleep 1
echo ""

echo "# Get the fs configs"
cat /etc/fstab

echo "" ; sleep 1
echo ""

echo "# List of processes running"
ps -ef

echo "" ; sleep 1
echo ""

echo "# List of open ports"
netstat -tulpn

echo "" ; sleep 1

echo "# SELinux status"
getenforce

echo "" ; sleep 1

echo "# Firewalld status"
firewall-cmd --state
